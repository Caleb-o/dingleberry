{
  "name": "dingleberry",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#identifiers" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#strings-single" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "#",
          "end": "\n",
          "name": "comment.line.hash"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.dingleberry",
          "match": "\\b(include|if|else|for|in|fn|return|mut|module|struct|this|true|false|none)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "match": "([[:alpha:]0-9_]+)",
          "captures": {
            "0": {
              "name": "entity.name.dingleberry"
            }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "[0-9]"
        },
        {
          "name": "constant.numeric.float",
          "match": "[0-9]+(\\.[0-9]+)"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.dingleberry",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.dingleberry",
          "match": "\\\\."
        }
      ]
    },
    "strings-single": {
      "name": "string.quoted.single.dingleberry",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.dingleberry",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.dingleberry"
}
